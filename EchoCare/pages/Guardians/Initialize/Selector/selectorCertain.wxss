.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 20px;
}

.main-title {
  font-size: 30px;
  color: #9be8b9; /* 浅绿色 */
  text-align: center;
  margin-bottom: 30px;
  display: block; /* 使每个 text 标签独占一行 */
  white-space: normal; /* 允许文本换行 */
}


text {
  margin-bottom: 10px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.main-image {
  width: 300px;
  height: 200px;
  margin: 20px;
}

.gesture {
  width: 50px;
  height: 50px;
}
