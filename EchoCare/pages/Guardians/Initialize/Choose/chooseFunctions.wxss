/* pages/Guardians/Initialize/Choose/chooseFunctions.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 18px;
  color: #333;
  margin: 10px 0;
}

.user-avatar {
  width: 50px;
  height: 50px;
  border-radius: 25px;
  margin: 5px 0;
}

.user-name {
  color: #666;
  font-size: 16px;
}

.buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button {
  width: 90%;
  height: 50px;
  line-height: 50px;
  border-radius: 25px;
  margin: 10px 0;
  color: #fff;
  font-size: 16px;
  text-align: center;
}

.red {
  background-color: #f56c6c;
}

.green {
  background-color: #67c23a;
}

.blue {
  background-color: #409eff;
}

.purple {
  background-color: #8a6de9;
}
