/* pages/Guardians/Health Management/reminder/calendarReminder.wxss */
.container {
  padding: 20px;
  font-size: 16px; /* 调整整体字体大小 */
}
.form-item {
  margin-bottom: 20px; /* 增加间距 */
  display: flex;
  align-items: center;
}
.form-item text {
  width: 100px; /* 调整标签宽度 */
  font-size: 18px; /* 调整标签字体大小 */
}
.input-large {
  flex: 1;
  height: 50px; /* 增加输入框高度 */
  font-size: 16px; /* 调整输入框字体大小 */
  padding: 0 10px;
}
.picker-date, .picker-time {
  flex: 1;
  height: 50px;
  line-height: 50px; /* 增加行高以垂直居中 */
  background-color: #f0f0f0;
  text-align: center;
  margin-left: 10px;
  font-size: 16px; /* 调整选择器字体大小 */
}
.button-large {
  width: 100%;
  height: 50px;
  background-color: #1aad19;
  color: white;
  font-size: 18px; /* 增加按钮字体大小 */
  border-radius: 5px;
}

